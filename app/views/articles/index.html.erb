<h1>Listing articles</h1>
<%= link_to '[write a new article]', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '[Show Article]', article_path(article) %></td>
    </tr>
  <% end %>
</table>
